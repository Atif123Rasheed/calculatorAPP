<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8272121"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_margin="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#231E1E"
            android:text="darkmode"

            />

        <Button
            android:id="@+id/btn_light_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#231E1E"
            android:text="Lightmode"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_input_string"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:hint="Insert Number"
        android:padding="@dimen/_8sdp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:hint="Result"
        android:padding="@dimen/_8sdp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_16sdp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_332sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/_8sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>




    </androidx.cardview.widget.CardView>
</LinearLayout>